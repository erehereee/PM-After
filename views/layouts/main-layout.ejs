<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta
      name="viewport"
      content="width=device-width, initial-scale=1, shrink-to-fit=yes"
    />
    <meta name="description" content="" />
    <meta name="author" content="" />
    <title>Title</title>
    <link
      rel="stylesheet"
      href="https://cdn.datatables.net/2.1.8/css/dataTables.dataTables.css"
    />
    <link href="/css/styles.css" rel="stylesheet" />

    <script
      src="https://use.fontawesome.com/releases/v6.3.0/js/all.js"
      crossorigin="anonymous"
    ></script>
  </head>
  <body class="sb-nav-fixed">
    <!-- Modal Parameter List -->
    <div
      class="modal fade"
      id="paramModal"
      data-bs-backdrop="static"
      data-bs-keyboard="false"
      tabindex="-1"
      aria-labelledby="paramModalLabel"
      aria-hidden="true"
    >
      <div class="modal-dialog modal-xl">
        <div class="modal-content">
          <div class="modal-header">
            <h1 class="modal-title fs-5" id="paramModalLabel">
              Parameter List
            </h1>
            <button
              type="button"
              class="btn-close"
              data-bs-dismiss="modal"
              aria-label="Close"
            ></button>
          </div>
          <div
            class="modal-body row d-flex justify-content-around gap-3"
            id="paramList"
          >
            <table id="tabledata" class="table table-striped table-hover">
              <thead class="align-middle">
                <tr>
                  <th scope="col">Device Name</th>
                  <th scope="col">Value</th>
                </tr>
              </thead>
              <tbody class="table-group-divider" id="tablebody"></tbody>
            </table>
          </div>
          <div class="modal-footer">
            <button
              type="button"
              class="btn btn-secondary"
              data-bs-dismiss="modal"
            >
              Close
            </button>
          </div>
        </div>
      </div>
    </div>
    <!-- Modal Alarm -->
    <div
      class="modal fade"
      id="alarmModal"
      data-bs-backdrop="static"
      data-bs-keyboard="false"
      tabindex="-1"
      aria-labelledby="staticBackdropLabel"
      aria-hidden="true"
    >
      <div class="modal-dialog modal-xl">
        <div class="modal-content">
          <div class="modal-header">
            <h1 class="modal-title fs-5" id="staticBackdropLabel">
              Alarm List
            </h1>
            <button
              type="button"
              class="btn-close"
              data-bs-dismiss="modal"
              aria-label="Close"
            ></button>
          </div>
          <div class="modal-body">
            <table
              id="alarmList"
              class="table table-striped"
              style="width: 100%"
            >
              <thead>
                <tr>
                  <th>Timestamp</th>
                  <th>Detail</th>
                  <th>Status</th>
                  <th>Description</th>
                </tr>
              </thead>
              <tbody id="alarmBody"></tbody>
            </table>
          </div>
          <div class="modal-footer">
            <button
              type="button"
              class="btn btn-secondary"
              data-bs-dismiss="modal"
            >
              Close
            </button>
            <button type="button" id="clearAlarm" class="btn btn-primary">
              Clear
            </button>
          </div>
        </div>
      </div>
    </div>
    <!-- Navbar -->
    <nav
      class="sb-topnav navbar navbar-expand navbar-dark bg-dark d-flex justify-content-evenly align-items-center px-lg-2 gap-lg-4"
    >
      <!-- Navbar Brand-->
      <!-- Sidebar Toggle-->
      <button
        class="btn btn-link btn-sm order-1 order-lg-0 me-lg-0"
        id="sidebarToggle"
        href="#!"
      >
        <i class="fas fa-bars icon-header"></i>
      </button>
      <button
        class="btn btn-link btn-sm order-2 order-lg-0 me-lg-0 position-relative"
        id="alarmToggle"
        href="#!"
        data-bs-toggle="modal"
        data-bs-target="#alarmModal"
      >
        <i class="fa-regular fa-bell icon-header"></i>
        <div class="dot-notif d-none" id="dot-notif"></div>
      </button>
      <!-- Header Alarm -->
      <div
        class="row align-items-start bg-light overflow-none flex-md-grow-2 w-50 flex-lg-grow-1 rounded-1 h-100"
      >
        <table class="table table-borderless" id="tabelAlarm">
          <tbody class="fs-tabel"></tbody>
        </table>
      </div>
      <!-- Additional Information -->
      <div
        class="bg-dark text-light rounded-1 d-lg-flex flex-lg-grow-2 flex-column justify-content-center align-items-center h-100 px-lg-2 d-none d-md-flex"
      >
        <span class="fs-10">
          <span id="date">11/02/2024</span>
          <span id="time">11:00:00</span>
        </span>
        <span class="fs-10"> Power State : <span id="state">PLN</span> </span>
      </div>
      <!-- Navbar-->
      <ul class="navbar-nav ms-md-0 me-lg-4">
        <li class="nav-item dropdown">
          <a
            class="nav-link dropdown-toggle"
            id="navbarDropdown"
            href="#"
            role="button"
            data-bs-toggle="dropdown"
            aria-expanded="false"
            ><i class="fas fa-user fa-fw icon-header"></i
          ></a>
          <ul
            class="dropdown-menu dropdown-menu-end"
            aria-labelledby="navbarDropdown"
          >
            <li><a class="dropdown-item" id="logout" href="#!">Logout</a></li>
          </ul>
        </li>
      </ul>
    </nav>
    <div id="layoutSidenav">
      <div id="layoutSidenav_nav">
        <nav class="sb-sidenav accordion sb-sidenav-dark" id="sidenavAccordion">
          <div class="sb-sidenav-menu">
            <div class="nav">
              <div class="sb-sidenav-menu-heading">Core</div>
              <a class="nav-link" href="/dashboard">
                <div class="sb-nav-link-icon">
                  <i class="fa-solid fa-chart-line"></i>
                </div>
                Dashboard
              </a>
              <div class="sb-sidenav-menu-heading">Interface</div>
              <a
                class="nav-link collapsed"
                href="#"
                data-bs-toggle="collapse"
                data-bs-target="#collapsePlant"
                aria-expanded="false"
                aria-controls="collapsePlant"
              >
                <div class="sb-nav-link-icon">
                  <i class="fa-solid fa-industry"></i>
                </div>
                Plant Monitoring
                <div class="sb-sidenav-collapse-arrow">
                  <i class="fas fa-angle-down"></i>
                </div>
              </a>
              <div
                class="collapse"
                id="collapsePlant"
                aria-labelledby="headingOne"
                data-bs-parent="#sidenavAccordion"
              >
                <nav class="sb-sidenav-menu-nested nav">
                  <a class="nav-link" href="#">Boiler</a>
                  <a class="nav-link" href="#">Opening</a>
                  <a class="nav-link" href="#">DC Processing</a>
                  <a class="nav-link" href="#">Aseptik CWC</a>
                  <a class="nav-link" href="#">Aseptik UHT</a>
                  <a class="nav-link" href="#">WWTP</a>
                  <a class="nav-link" href="/plant/biogas1">Biogas</a>
                  <a class="nav-link" href="#">Chiller</a>
                  <a class="nav-link" href="#">Compressor</a>
                  <a class="nav-link" href="#">Genset</a>
                  <a class="nav-link" href="#">RO</a>
                </nav>
              </div>
              <a
                class="nav-link collapsed"
                href="#"
                data-bs-toggle="collapse"
                data-bs-target="#collapseEnergy"
                aria-expanded="false"
                aria-controls="collapseEnergy"
              >
                <div class="sb-nav-link-icon">
                  <i class="fa-solid fa-plug-circle-bolt"></i>
                </div>
                Energy Monitoring
                <div class="sb-sidenav-collapse-arrow">
                  <i class="fas fa-angle-down"></i>
                </div>
              </a>
              <div
                class="collapse"
                id="collapseEnergy"
                aria-labelledby="headingOne"
                data-bs-parent="#sidenavAccordion"
              >
                <nav class="sb-sidenav-menu-nested nav">
                  <a class="nav-link" href="#">Water</a>
                  <a class="nav-link" href="#">Electricity</a>
                </nav>
              </div>
              <a class="nav-link" href="/power">
                <div class="sb-nav-link-icon">
                  <i class="fa-solid fa-power-off"></i>
                </div>
                Power Monitoring
              </a>
              <a class="nav-link" href="/report">
                <div class="sb-nav-link-icon">
                  <i class="fa-solid fa-table-cells-large"></i>
                </div>
                Report
              </a>
              <a class="nav-link" href="/about">
                <div class="sb-nav-link-icon">
                  <i class="fa-solid fa-circle-info"></i>
                </div>
                About
              </a>
            </div>
          </div>
          <div class="sb-sidenav-footer">
            <div class="small">Logged in as:</div>
            <%= user %>
          </div>
        </nav>
      </div>
      <div id="layoutSidenav_content">
        <main>
          <div class="container-fluid px-4"><%- body %></div>
        </main>
        <footer class="py-2 bg-light bg-dark">
          <div class="container-fluid px-4">
            <div
              class="d-flex align-items-center justify-content-between small"
            >
              <button
                id="prevButton"
                type="button"
                class="btn btn-light btn-sm"
              >
                Previous
              </button>
              <button
                id="paramButton"
                type="button"
                class="btn btn-light btn-sm"
                data-bs-toggle="modal"
                data-bs-target="#paramModal"
              >
                Parameter List
              </button>
              <button
                id="nextButton"
                type="button"
                class="btn btn-light btn-sm"
              >
                Next
              </button>
            </div>
          </div>
        </footer>
      </div>
    </div>
    <script src="https://cdn.socket.io/4.5.4/socket.io.min.js"></script>
    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/js/bootstrap.bundle.min.js"
      crossorigin="anonymous"
    ></script>
    <script
      src="https://cdnjs.cloudflare.com/ajax/libs/Chart.js/2.8.0/Chart.min.js"
      crossorigin="anonymous"
    ></script>
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script
      src="https://code.jquery.com/jquery-3.7.1.min.js"
      integrity="sha256-/JqT3SQfawRcv/BIHPThkBvs0OEvtFFmqPF/lYI/Cxo="
      crossorigin="anonymous"
    ></script>
    <script src="/js/scripts.js" defer></script>
    <script src="/js/alarm.js"></script>
    <%- script %>
  </body>
</html>
